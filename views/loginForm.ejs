<%-include (`./header`, {title: `Login Page`})%>
    <h1>Login to your Account</h1>
    <%if (error) {%>
        <div>
        <%=error%>
        </div>
    <%}%>
    <form action="/login" method="POST">
        <label for="email">Email</label><br>
        <input type="text" name="email" id="email" placeholder="yourname@example.com"><br>
        <label for="myinput">Password</label><br>
        <input type="password" name="password" id="myinput" placeholder="*****">
        <br><br>
        <button class="btn btn-primary my-2 my-sm-0" type="submit">Login</button>
    </form>
    <br>
    Don't have account? <br>
    <a href="/registerStudent">Register Student</a> |
    <a href="/registerInstructor">Register Instructor</a>
</body>
</html>
<%-include (`./script`)%>
<%-include (`./footer`)%>
